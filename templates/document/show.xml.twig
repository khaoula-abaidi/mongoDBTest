<?xml version="1.0" encoding="UTF-8" ?>
<documents>
        {% for document in documents %}
            <document xmlns="http://symfony.com/schema/dic/twig">
                        <id>{{ document.id }}</id>
                        <doi>{{ document.doi }}</doi>
                        <title>{{ document.title }}</title>
                        <summary>{{ document.summary }}</summary>
            </document>
    {% endfor %}
</documents>